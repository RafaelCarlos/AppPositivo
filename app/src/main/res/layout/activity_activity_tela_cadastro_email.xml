<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.positivo.rafaellcarloss.apppositivo.ActivityTelaCadastroEmail">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_activity_tela_cadastro_email"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <ScrollView
        android:id="@+id/scroll_view_tela_cadastro_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_tela_cadastro_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_view_tela_cadastro_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_lampada_cifrao" />


            <TextView
                android:id="@+id/text_view_tela_cadastro_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="Positivo Recarga"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/et_nome_tela_cadastro_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tb_activity_tela_cadastro_email"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="60dp"
                android:hint="Nome"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/et_email_tela_cadastro_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_nome_tela_cadastro_email"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/et_senha_tela_cadastro_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_email_tela_cadastro_email"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="****"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <Button
                android:id="@+id/bt_cadastrar_tela_cadastro_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_senha_tela_cadastro_email"
                android:layout_marginTop="46dp"
                android:text="Cadastrar" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>
