<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_activity_tela_recarga_gratis"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <TextView
        android:id="@+id/tv_informaca_fragment_recarga_gratis"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_elementos"
        android:background="#DCDCDC"
        android:text="Convide pessoas e ganhe R$ 3 por cada um indicado que usar."
        android:textColor="@color/secondary_text" />

    <RelativeLayout
        android:id="@+id/rl_elementos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="#DCDCDC">

        <TextView
            android:id="@+id/tv_codigo_fragment_recarga_gratis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:text="CÃ³digo"
            android:textColor="@color/secondary_text"
            android:textSize="10dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/bt_copiar_activity_tela_recarga_gratis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="87dp"
            android:layout_marginRight="87dp"
            android:background="@color/colorFAB"
            android:paddingLeft="10dp"
            android:text="Copiar"
            android:textColor="@color/abc_primary_text_material_dark" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_activity_tela_recarga_gratis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:scrollbars="vertical" />
    </RelativeLayout>
</LinearLayout>



