<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.positivo.rafaellcarloss.apppositivo.TelaAdicionaNumero">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_tela_add_numero"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Button
        android:id="@+id/bt_add_numero_contatos_tela_add_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_tela_add_numero"
        android:layout_centerHorizontal="true"
        android:text="ADICIONAR NÃšMERO DOS CONTATOS" />

    <EditText
        android:id="@+id/et_ddd_tela_add_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bt_add_numero_contatos_tela_add_numero"
        android:hint="DDD"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#000000" />


</RelativeLayout>
