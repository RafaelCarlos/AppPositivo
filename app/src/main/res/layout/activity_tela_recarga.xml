<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.positivo.rafaellcarloss.apppositivo.TelaRecarga">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main_recarga"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Button
        android:id="@+id/bt_add_novo_numero_tela_recarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tb_main_recarga"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:drawableLeft="@drawable/ic_mais_web"
        android:drawablePadding="-60dp"
        android:text="Adicionar Novo NÃºmero" />

    <TextView
        android:id="@+id/tv_numeros_frequentes_tela_recarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bt_add_novo_numero_tela_recarga"
        android:text="Numeros Frequentes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

</RelativeLayout>
