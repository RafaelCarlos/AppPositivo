<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_informaca_fragment_recarga_gratis"
        android:layout_width="match_parent"
        android:background="#DCDCDC"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_elementos"
        android:text="Convide pessoas e ganhe R$ 3 por cada um indicado que usar."
        android:textColor="@color/secondary_text" />

    <RelativeLayout
        android:id="@+id/rl_elementos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="#DCDCDC">

        <TextView
            android:id="@+id/tv_codigo_fragment_recarga_gratis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:text="CÃ³digo"
            android:textColor="@color/secondary_text"
            android:textSize="10dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/bt_copiar_fragment_recarga_gratis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorFAB"
            android:paddingLeft="10dp"
            android:text="Copiar"
            android:textColor="@color/abc_primary_text_material_dark"
            android:layout_marginRight="87dp"
            android:layout_marginEnd="87dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_fragment_recarga_gratis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:padding="10dp"
            android:scrollbars="vertical" />
    </RelativeLayout>
</LinearLayout>